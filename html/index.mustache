<html>
    <head>
        <title>Jukebox</title>
        <link rel="stylesheet" href="awsm_theme_big-stone.min.css">
        <link rel="stylesheet" href="layout.css">
    </head>
    <body>
        <h1>Coronation Rd. Jukebox</h1>
        <div class="current">
            <h2>Now playing</h2>
            {{#current}}
            <div id="title"><p>{{title}}. {{uploader}}.</p></div>
            <img id="thumbnail" src="{{thumbnail}}"/>
            <p id="tags">{{#tags}}{{.}}{{#hasNext}}, {{/hasNext}}{{/tags}}</p>
            {{/current}}
        </div>
        <div class="playlist">
            <h2>Next</h2>
            <table>
                {{#next}}
                {{#item}}
                <tr>
                    <th>#</th>
                    <th>{{title}}</th>
                </tr>
                {{/item}}
                {{/next}}
            </table>
        </div>
    </body>
</html>
