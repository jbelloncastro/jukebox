<!DOCTYPE html>
<html lang="en">
    <head>
        <title>Jukebox</title>
        <link rel="stylesheet" href="https://igoradamenko.github.io/awsm.css/css/awsm_theme_big-stone.min.css">
        <script type="text/javascript" src="/submit.js"></script>
    </head>
    <body>
        <h1>Coronation Rd. Jukebox</h1>
        <div class="current">
            <h2>Now playing</h2>
            {{#current}}
            <div id="title"><p>{{title}}. {{uploader}}.</p></div>
            <img id="thumbnail" src="{{thumbnail}}"/>
            <p id="tags">{{#tags}}{{.}}{{#hasNext}}, {{/hasNext}}{{/tags}}</p>
            {{/current}}
        </div>
        <div class="playlist">
            <h2>Next</h2>
            <table>
                {{#next}}
                {{#item}}
                <tr>
                    <th>#</th>
                    <th>{{title}}</th>
                </tr>
                {{/item}}
                {{/next}}
            </table>
        </div>
        <form id="search">
            <input type="text" id="query" name="query">
            <input type="submit" value="Queue">
        </form>
        <script>
            var form = document.getElementById("search");
            form.addEventListener('submit', function (e) {
                e.preventDefault(); // Prevent submitting the form
                doSubmit();
            });
        </script>
    </body>
</html>
